#!/bin/sh

PROG=$0
test -h $0 && PROG=$(readlink $0)
PREFIX=$(cd $(dirname $(dirname $PROG)); pwd)

#### Fill in values for these variables ####
REL_NAME=portius
REL_VSN=0.8.1.1
ERTS_VSN=5.7.1
INVOCATION_SUFFIX="-prefix $PREFIX"
#INVOCATION_SUFFIX="-detached -prefix $PREFIX"
###########################################

PREFIX=$(cd $(dirname $(dirname $0)); pwd)

export ROOTDIR=$PREFIX
export BINDIR=$PREFIX/erts-$ERTS_VSN/bin
export EMU=beam
export PROGNAME=erl
export LD_LIBRARY_PATH=$PREFIX/erts-$ERTS_VSN/lib

REL_DIR=$PREFIX/releases/$REL_NAME-$REL_VSN

$BINDIR/erlexec -config $REL_DIR/sys.config -boot $REL_DIR/$REL_NAME $INVOCATION_SUFFIX
